<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="ch.intertec.storybook.model.hbn.entity.Person"
        table="PERSON"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="increment">
            </generator>
        </id>

        <many-to-one
            name="gender"
            class="ch.intertec.storybook.model.hbn.entity.Gender"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="gender_id"
            lazy="false"
        />

        <property
            name="firstname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="firstname"
            length="256"
        />

        <property
            name="lastname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="lastname"
            length="256"
        />

        <property
            name="abbreviation"
            type="java.lang.String"
            update="true"
            insert="true"
            column="abbreviation"
            length="256"
        />

        <property
            name="birthday"
            type="java.util.Date"
            update="true"
            insert="true"
            column="birthday"
        />

        <property
            name="dayofdeath"
            type="java.util.Date"
            update="true"
            insert="true"
            column="dayofdeath"
        />

        <property
            name="occupation"
            type="java.lang.String"
            update="true"
            insert="true"
            column="occupation"
            length="256"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
            length="32768"
        />

        <property
            name="color"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="color"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notes"
            length="32768"
        />

        <many-to-one
            name="category"
            class="ch.intertec.storybook.model.hbn.entity.Category"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="category_id"
            lazy="false"
        />

		<!-- 
		<bag name="attributes" lazy="false" cascade="all" >
            <key column="id"/>
            <one-to-many class="ch.intertec.storybook.model.hbn.entity.Attribute" />
        </bag> -->
 
        <bag
            name="attributes"
            table="person_attribute"
            lazy="false"
            cascade="none">
            <key column="person_id">
            </key>
            <many-to-many
                class="ch.intertec.storybook.model.hbn.entity.Attribute"
                column="attribute_id"
                outer-join="auto"/>
		</bag>

    </class>

</hibernate-mapping>
