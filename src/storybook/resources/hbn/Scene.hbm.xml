<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class
        name="ch.intertec.storybook.model.hbn.entity.Scene"
        table="SCENE">

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            unsaved-value="null" >
            <generator class="increment">
            </generator>
        </id>

        <many-to-one
            name="chapter"
            class="ch.intertec.storybook.model.hbn.entity.Chapter"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="chapter_id"
            lazy="false"
        />

        <many-to-one
            name="strand"
            class="ch.intertec.storybook.model.hbn.entity.Strand"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="strand_id"
            lazy="false"
        />

        <property
            name="sceneno"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="sceneno"
        />

        <property
            name="sceneTs"
            type="java.sql.Timestamp"
            update="true"
            insert="true"
            column="scene_ts"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="2048"
        />

        <property
            name="summary"
            type="java.lang.String"
            update="true"
            insert="true"
            column="summary"
            length="32768"
        />

        <property
            name="status"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="status"
        />

        <property
            name="relativeDateDifference"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="relative_date_difference"
        />

        <property
            name="relativeSceneId"
            type="java.lang.Long"
            update="true"
            insert="true"
            column="relative_scene_id"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notes"
            length="32768"
        />

        <property
            name="informative"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="informative"
        />

        <bag
            name="persons"
            table="scene_person"
            lazy="false"
            cascade="none">
            <key column="scene_id">
            </key>
            <many-to-many
                class="ch.intertec.storybook.model.hbn.entity.Person"
                column="person_id"
                outer-join="auto" />
		</bag>

        <bag
            name="locations"
            table="scene_location"
            lazy="false"
            cascade="none">
            <key column="scene_id">
            </key>
            <many-to-many
                class="ch.intertec.storybook.model.hbn.entity.Location"
                column="location_id"
                outer-join="auto" />
		</bag>

        <bag
            name="strands"
            table="scene_strand"
            lazy="false"
            cascade="none">
            <key column="scene_id">
            </key>
            <many-to-many
                class="ch.intertec.storybook.model.hbn.entity.Strand"
                column="strand_id"
                outer-join="auto"
             />
		</bag>

    </class>

</hibernate-mapping>
