<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="ch.intertec.storybook.model.hbn.entity.Chapter"
        table="CHAPTER"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Chapter.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <many-to-one
            name="part"
            class="ch.intertec.storybook.model.hbn.entity.Part"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="part_id"
            lazy="false"
        />

        <property
            name="chapterno"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="chapterno"
        />

        <property
            name="title"
            type="java.lang.String"
            update="true"
            insert="true"
            column="title"
            length="256"
        />

        <property
            name="description"
            type="java.lang.String"
            update="true"
            insert="true"
            column="description"
            length="32768"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notes"
            length="32768"
        />

    </class>

</hibernate-mapping>
