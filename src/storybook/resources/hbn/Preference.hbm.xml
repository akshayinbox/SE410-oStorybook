<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="ch.intertec.storybook.model.hbn.entity.Preference"
        table="PREFERENCE"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="increment">
            </generator>
        </id>

        <property
            name="key"
            type="java.lang.String"
            update="true"
            insert="true"
            column="key"
            unique="true"
            length="512"
        />

        <property
            name="stringValue"
            type="java.lang.String"
            update="true"
            insert="true"
            column="stringValue"
            length="4096"
        />

        <property
            name="integerValue"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="integerValue"
        />

        <property
            name="booleanValue"
            type="java.lang.Boolean"
            update="true"
            insert="true"
            column="booleanValue"
        />

        <property
            name="binValue"
            type="binary"
            update="true"
            insert="true"
            column="binValue"
            length="16384"
        />

    </class>

</hibernate-mapping>
