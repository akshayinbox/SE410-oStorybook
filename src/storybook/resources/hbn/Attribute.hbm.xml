<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="ch.intertec.storybook.model.hbn.entity.Attribute"
        table="ATTRIBUTE"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="increment">
            </generator>
        </id>

        <property
            name="key"
            type="java.lang.String"
            update="true"
            insert="true"
            column="key"
            length="256"
        />

        <property
            name="value"
            type="java.lang.String"
            update="true"
            insert="true"
            column="value"
            length="2048"
        />

    </class>

</hibernate-mapping>
