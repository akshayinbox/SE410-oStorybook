<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping
>
    <class
        name="ch.intertec.storybook.model.hbn.entity.Strand"
        table="STRAND"
    >

        <id
            name="id"
            column="ID"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="increment">
              <!--  
                  To add non XDoclet generator parameters, create a file named 
                  hibernate-generator-params-Strand.xml 
                  containing the additional parameters and place it in your merge dir. 
              --> 
            </generator>
        </id>

        <property
            name="abbreviation"
            type="java.lang.String"
            update="true"
            insert="true"
            column="abbreviation"
            length="256"
        />

        <property
            name="name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="name"
            length="256"
        />

        <property
            name="color"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="color"
        />

        <property
            name="sort"
            type="java.lang.Integer"
            update="true"
            insert="true"
            column="sort"
        />

        <property
            name="notes"
            type="java.lang.String"
            update="true"
            insert="true"
            column="notes"
            length="32768"
        />

    </class>

</hibernate-mapping>
